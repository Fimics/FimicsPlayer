<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".xwidget.TextViewActivity">


    <!-- style="@style/style_textview"-->
    <com.mic.customview.view.XTextView
        android:layout_marginTop="20dp"
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:text="textpbview1"
        app:size="20sp"
        app:color="#FF0000"
        android:background="#00FF00"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        />

    <com.mic.customview.view.QQStepView
        android:id="@+id/step_view"
        app:outerColor="@color/colorPrimary"
        app:innerColor="@color/colorAccent"
        app:borderWidth="10dp"
        app:stepTextColor="@color/colorAccent"
        app:stepTextSize="20sp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</LinearLayout>